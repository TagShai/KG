<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#088002"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_toch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCROLL" />

        <Button
            android:id="@+id/b_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Draw" />

        <Button
            android:id="@+id/b_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear" />
        <Button
            android:id="@+id/b_draw_3d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRAW3D" />
        <Button
            android:id="@+id/b_transform_2d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transform2D" />
        <Button
            android:id="@+id/b_fractals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fractals" />
        <Button
            android:id="@+id/trim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trim" />
        <Button
            android:id="@+id/b_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File" />
    </LinearLayout>
</HorizontalScrollView>